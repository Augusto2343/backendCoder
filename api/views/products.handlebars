<div class="container-fluid">
    <div class="row">
      
    <h2 class="display-5">Productos</h2>
<div id="productList" class="col-md flex flex-row flex-wrap">
    <table class="table table-dark">
  <thead>
    <tr>
      
      <th scope="col">ID</th>
      <th scope="col">Titulo</th>
      
      <th scope="col">Precio</th>
      
      <th scope="col">Stock</th>
      <th scope="col">Category</th>
      <th scope="col"></th>
      <th scope="col">Thumbnail</th>
    </tr>
  </thead>
  <tbody>
    
  {{#each productos.docs}}

    <tr>
      <td>{{this._id}}</td>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.category}}</td>
      <td><a href="http://localhost:5000/products/{{this.id}}" class="btn btn-primary">Ver m√°s info</a></td>
      <td><img src={{this.thumbnail}} height="100px" width="100px" ></td>

    </tr>

  {{/each}}
</tbody>
</table>        
    <nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/products?limit={{productos.limit}}&page={{productos.prevPage}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link">{{productos.page}}</a></li>
    <li class="page-item"><a class="page-link" href="/products?limit={{productos.limit}}&page={{productos.totalPages}}">{{productos.totalPages}}</a></li>
    <li class="page-item">
      <a class="page-link" href="/products?limit={{productos.limit}}&page={{productos.nextPage}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>
<div class="row flex flex-col align-center justify-center">
    <h2 class="display-5">Control de base de datos</h2>
    <p class="d-inline-flex gap-1">
  <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Subir producto</a>
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Actualizar producto</button>
