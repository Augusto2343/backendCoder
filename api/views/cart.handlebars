<a href="/products" class="btn btn-link mb-3" style="text-decoration: none;">
<i class="bi bi-arrow-left fs-3 text-dark"  ></i>
</a>


<div class="container mt-4" id="carrito" data-idCart={{idCart}}>
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">
                <i class="fas fa-shopping-cart text-primary"></i>
                Mi Carrito
            </h1>
        </div>
    </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-basket text-light me-2 "></i>
                            Productos en el carrito ({{products.length}})
                        </h5>
                    </div>
                    <div class="card-body">
                            {{#each products}}
                                <div class="product-item mb-3 p-3 border rounded" data-product-id="{{this.producto._id}}">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            <img src="{{this.producto.thumbnail}}" 
                                                 alt="{{this.producto.title}}" 
                                                 class="img-fluid rounded"
                                                 style="max-height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="col-md-4">
                                            <h6 class="mb-1">{{this.producto.title}}</h6>
                                            <small class="text-muted">{{this.producto.description}}</small>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <div class="quantity-controls">
                                                <button class="btn btn-sm btn-outline-secondary p-2 delete-product-btn" 
                                                        data-action="decrease" 
                                                        data-product-id="{{this.producto._id}}">
                                                        <i class="bi bi-dash-lg text-dark "></i>
                                                </button>
                                                <span class="quantity-display mx-2">{{this.quantity}}</span>
                                                <button class="btn btn-sm btn-outline-secondary p-2 quantity-btn" 
                                                        data-action="increase" 
                                                        data-product-id="{{this.producto._id}}">
                                                        <i class="bi bi-plus-lg text-dark"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="priceElement fw-bold text-primary">${{this.producto.price}}</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            {{/each}}
                        
                            
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calculator"></i>
                            Resumen
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="subtotal" class="fw-bold">$0</span>
                        </div>
                        
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="h5">Total:</span>
                            <span id="total" class="h5 fw-bold text-primary">0</span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" id="checkout-btn">
                                <i class="fas fa-credit-card"></i>
                                Proceder al pago
                            </button>
                            <button class="btn btn-outline-danger" data-cart-id={{idCart}} id="clear-cart-btn">
                                <i class="fas fa-trash"></i>
                                Vaciar carrito
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/cart.js"></script>
<style>
    .product-item {
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }
    
    .product-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .quantity-controls {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .quantity-display {
        min-width: 30px;
        text-align: center;
        font-weight: bold;
    }
    
    .delete-product-btn {
        transition: all 0.2s ease;
    }
    
    .delete-product-btn:hover {
        transform: scale(1.1);
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn {
        border-radius: 10px;
        font-weight: 500;
    }
    
    .btn-lg {
        padding: 12px 24px;
    }
    
    .fa-shopping-bag {
        animation: bounce 2s infinite;
    }
    
    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }
    
    @media (max-width: 768px) {
        .product-item .row {
            text-align: center;
        }
        
        .quantity-controls {
            margin: 10px 0;
        }
        
        .col-md-2 {
            margin-bottom: 10px;
        }
    }
</style>

