</header>
<div class="container-fluid ">
    
{{#each producto.docs}}
<div class="producto mt-5 ">
    <div class="row">
        <a class="w-25 h-25" href="/products"><i class="bi bi-arrow-left w-25 h-25" ></i></a>
    </div>
    <div class="row">
        <div class="col">
            <img src={{this.thumbnail}} class="img-thumbnail"  >
        </div>
        <div class="col">
            
            <h1 >{{this.title}}</h1>
            <div class="row">
        <div class="col">

            <p >Descripcion del producto: {{this.description}}</p>
            <h5>Id del producto: {{this.id}}</h5>
            <h5>Codigo: {{this.code}}</h5>
            </div>
            <div class="col">

             <h3>Precio: <span class="text-danger">${{this.price}}</span></h3>
             <h3>Stock: {{this.stock}}</h3>
            </div>
            </div>
            
        </div>
     </div>
    <div class="row">
        <button data-idProd={{this.id}}  id="comprarBtn" class="btn btn-primary">Comprar</button>
    </div> 
    {{/each}}
</div>
</div>
<script src="/socket.io/socket.io.js"></script>
